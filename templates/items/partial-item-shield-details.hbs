<section class="tab equipment-{{tab.id}} {{tab.cssClass}}" data-tab="{{tab.id}}" data-group="{{tab.group}}">

  <ul>
    <li class="flexrow"><label class="item-field-label-medium ">{{localize "WH.ui.type"}}</label>
      <select class="item-field-label-long " type="text" name="system.shieldtype" value="{{system.shieldtype}}"
        data-dtype="String">
        {{selectOptions config.armorTypes selected=system.shieldtype localize=true labelAttr="label"}}
      </select>
    </li>

    <li class="flexrow"><label class="item-field-label-medium ">{{localize "WH.ui.parrybonus"}}</label>
      <input type="text" class="item-field-label-medium " name="system.parrybonus" value="{{system.parrybonus}}"
        data-dtype="Number" />
    </li>

    {{> systems/fvtt-warhero/templates/items/partial-item-common-equipment.hbs}}

  </ul>
</section>